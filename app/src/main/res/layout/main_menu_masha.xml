<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/insbg"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.1"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".1"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:gravity="center"
        android:paddingTop="180dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/mydistination_masha"
            android:layout_width="235dp"
            android:layout_height="60dp"
            android:background="@drawable/about_us" />

        <ImageView
            android:id="@+id/nearest_masha"
            android:layout_width="235dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/services" />

        <ImageView
            android:id="@+id/current_masha"
            android:layout_width="235dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/appointments" />

        <ImageView
            android:id="@+id/route_masha"
            android:layout_width="235dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/contact_us" />
    </LinearLayout>





</LinearLayout>